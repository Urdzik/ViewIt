<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NoInternetActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:theme="@style/ThemeOverlay.AppCompat.ActionBar"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wifi"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/info_padding"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/internet_conection"
                android:textColor="@color/color_internet"
                android:textSize="@dimen/info_text_size"/>
        <Button
                android:textColor="#fff"
                android:textSize="@dimen/text_size_info_landmark"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/info_padding"
                android:background="@drawable/button_botton"
                android:id="@+id/try_again_btn"
                android:layout_width="@dimen/width_try_again"
                android:layout_height="@dimen/height_try_again"
                android:text="@string/try_again"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/height_try_again"/>
    </LinearLayout>

</RelativeLayout>